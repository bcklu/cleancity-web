<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de" lang="de">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title><%= configatron.app_name %> - <%= yield(:title) || 'Home' %></title>
		<%= javascript_include_tag :defaults, :cache => true %>
		<%= stylesheet_link_tag 'style', :cache => true %>
		<%= csrf_meta_tag %>
		<%= yield(:head) %>
	</head>
	<body>
		<div id="logo_expand"></div>
		<div id="header" class="container_12">
			<div id="search">
				<% defaultValue = 'PLZ oder Ort' %>
				<%= form_tag do %>
					<%= text_field_tag(:q, defaultValue, :onfocus => "if(this.value == '#{defaultValue}') {this.value = ''}", :onblur => "if(this.value == '') {this.value = '#{defaultValue}'}") %>
				<% end %>
			</div>
			<div id="logo"><%= link_to(image_tag("schandfleck_logo.png", :alt => configatron.app_name, :border=>0), :root) %></div>
		</div>
		<div id="navigation">
			<%= render 'layouts/navigation' %>
		</div>		
		<div id="content_wrapper" class="container_12">
			<% if show_title? %>
			<h1><%= yield(:title) %></h1>
			<% else %>
			&nbsp;
			<% end %>
			<div id="content">
				<div id="messges">
					<%= render 'layouts/messages' %>
				</div>				
				<%= yield %>
			</div>
			<div id="footer" class="container_12">
				<%= link_to('AGB', '/agb') %> | <%= link_to('FAQ', '/faq') %> | <%= link_to('Contributors', '/contributors') %>
			</div>
		</div>
		<div class="container_12"><%= image_tag('background-content-footer.png', :alt => '') %></div>
	</body>
</html>

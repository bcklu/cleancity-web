<li>
	<%= link_to(image_tag(incident_block.image.image.url(:incident_block), :class => "incimg"),incident_report_path(incident_block)) %>
	<%= truncate(incident_block.description, :length => 50) %><br/>
	<small>
		<% if incident_block.comments.count == 0 %>
		<%elsif incident_block.comments.count == 1 %>
			Hat einen Kommentar<br/>
		<% else %>
			Hat <%= incident_block.comments.count %> Kommentare<br/>
		<% end %>
		<% if incident_block.dislikers.count == 0 %>
 		<% else %>
			Und es stoert andere auch
		<% end %>
	</small>
</li>
